{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    "jsx": "preserve",
    "strict": true,
    "skipLibCheck": true,

    "esModuleInterop": true,
    "allowJs": true,
    "incremental": true,

    "baseUrl": "."
  },
  "plugins": [{ "name": "next" }],
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
